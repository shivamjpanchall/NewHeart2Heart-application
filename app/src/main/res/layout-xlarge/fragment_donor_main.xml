<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".donor.donorMainFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/logo_new"
            tools:layout_editor_absoluteX="88dp"
            tools:layout_editor_absoluteY="164dp" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="52dp"
            android:layout_marginTop="100dp"
            android:layout_marginEnd="56dp"
            android:text="Heart2Heart"
            android:textColor="@color/h2hblue"
            android:textSize="60sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/donorMainImage"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView2" />

        <ImageView
            android:id="@+id/donorMainImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/main_img"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="3dp" />

        <Button
            android:id="@+id/Login_Button"
            android:layout_width="213dp"
            android:layout_height="41dp"
            android:layout_marginStart="99dp"
            android:layout_marginTop="616dp"
            android:layout_marginEnd="99dp"
            android:backgroundTint="@color/logo"
            android:text="Login"
            app:layout_constraintEnd_toEndOf="@+id/donorMainImage"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="@+id/donorMainImage"
            app:layout_constraintTop_toTopOf="@+id/donorMainImage" />

        <Button
            android:id="@+id/Register_Button"
            android:layout_width="213dp"
            android:layout_height="41dp"
            android:layout_marginStart="99dp"
            android:layout_marginTop="22dp"
            android:layout_marginEnd="99dp"
            android:layout_marginBottom="67dp"
            android:backgroundTint="@color/white"
            android:text="Register"
            android:textColor="@color/logo"
            app:layout_constraintBottom_toBottomOf="@+id/donorMainImage"
            app:layout_constraintEnd_toEndOf="@+id/donorMainImage"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="@+id/donorMainImage"
            app:layout_constraintTop_toBottomOf="@+id/Login_Button"
            app:layout_constraintVertical_bias="1.0" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>