<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".donor.donorMainFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="149dp"
            android:layout_height="124dp"
            android:layout_marginStart="64dp"
            android:layout_marginEnd="518dp"
            android:src="@drawable/logo_new"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="88dp" />

        <TextView
            android:layout_width="173dp"
            android:layout_height="40dp"
            android:layout_marginStart="52dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="56dp"
            android:text="Heart2Heart"
            android:textColor="@color/h2hblue"
            android:textSize="30sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/donorMainImage"
            app:layout_constraintHorizontal_bias="0.011"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView2" />

        <ImageView
            android:id="@+id/donorMainImage"
            android:layout_width="733dp"
            android:layout_height="409dp"
            android:src="@drawable/main_img"
            tools:layout_editor_absoluteX="-1dp"
            tools:layout_editor_absoluteY="0dp" />

        <Button
            android:id="@+id/Login_Button"
            android:layout_width="213dp"
            android:layout_height="41dp"
            android:layout_marginStart="492dp"
            android:layout_marginTop="284dp"
            android:backgroundTint="@color/logo"
            android:text="Login"
            app:layout_constraintStart_toStartOf="@+id/donorMainImage"
            app:layout_constraintTop_toTopOf="@+id/donorMainImage" />

        <Button
            android:id="@+id/Register_Button"
            android:layout_width="213dp"
            android:layout_height="41dp"
            android:layout_marginStart="488dp"
            android:layout_marginTop="8dp"
            android:backgroundTint="@color/white"
            android:text="Register"
            android:textColor="@color/logo"
            app:layout_constraintStart_toStartOf="@+id/donorMainImage"
            app:layout_constraintTop_toBottomOf="@+id/Login_Button" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>